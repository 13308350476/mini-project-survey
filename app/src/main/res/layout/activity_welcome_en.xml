<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome_enActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE PART IN OUR SURVEY!"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Befor we start,here are things you should know:"
        android:layout_marginTop="100dp"
        android:textSize="15dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Please be honest when making your choice."
        android:layout_marginTop="150dp"
        android:textSize="15dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-We are just doing a reaserch so you don't have to fake your information."
        android:layout_marginTop="200dp"
        android:textSize="15dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Please follow the step we designed for you and don't skip any questions."
        android:layout_marginTop="260dp"
        android:textSize="15dp"
        android:layout_marginLeft="40dp">
        ></TextView>

    <RadioButton
        android:id="@+id/rb_welcome_en"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:text="I accept these requests."
        android:textColor="#000000"/>
    <Button
        android:id="@+id/bt_welcome_en"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="LET'S START!"
        android:background="#39BD3E"
        ></Button>

</RelativeLayout>